<form>
  <models>
    <model id="$m_login" />
  </models>
  <functions>
    <function id="$f" file="./login-form-funcs" class-name="LoginFuncs" />
  </functions>
  <content>
    <image class="t--login-logo" src="http://2014.erp-future.com/sites/2014.erp-future.com/files/1_business/Logo_U_TIP.png" />
    <form-container bind-to="$f.loginCommand">
      <data-context data-context="$m_login">
        <text add-margin-top="false">Geben Sie hier Ihren Benutzernamen und Passwort ein und klicken Sie auf "Anmelden".</text>
        <text-box caption="Benutzername" bind-to="Username" />
        <text-box caption="Passwort" bind-to="Password" />
        <check-box caption="Angemeldet bleiben" bind-to="StayLoggedOn" />
      </data-context>

      <command bind-to="$f.loginCommand" />
    </form-container>
  </content>
</form>