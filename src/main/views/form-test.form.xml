<form>
    <models>
        <model id="$m_Dummy" web-api-action="base/Security/Profile"/>
        <model id="$m_Dummy2" web-api-action="base/Security/Profile"/>
        <model id="$m_Dummy3" web-api-action="base/Security/Profile" key="$m_Dummy2.Id"/>
    </models>
    <functions>
        <function id="$f_Test" file="../functions/test-function" class-name="TestFunction" custom-parameter="{ x: 1, y: 2}" />
    </functions>
    <content>
        <flex-box>
            <h1>${$m_Dummy2.Name} asdf</h1>
            <h2>${$m_Dummy2.Name}</h2>
            <h3>${$m_Dummy2.Name}</h3>
            <h4>${$m_Dummy2.Name}</h4>
            <h5>${$m_Dummy2.Name}</h5>
            <h6>${$m_Dummy2.Name}</h6>
        </flex-box>

        <file-download-link href="http://www.vol.at" />
        <file-download-link data-context="$f_Test" bind-to="downloadUrl" />

        <icon icon="fa-home"/>
        <icon bind-to="$f_Test.icon"/>
        <image src="https://upload.wikimedia.org/wikipedia/commons/e/ec/Blume_mit_Schmetterling_und_Biene_1uf.JPG" height="150px" background-size="contain" /> 
        <image data-context="$f_Test" bind-to="imageUrl" height="150px" background-size="contain" /> 
        <image data-context="$f_Test" bind-to="imageUrl" /> 
        <html file="../htmls/dummy.html" />

        <!--<command data-context="$m_Dummy" bind-to="demoCommand" />-->
        <command bind-to="$f_Test.giveItToMe" />
        <text-box caption="Name" data-context="$m_Dummy2" bind-to="Name" c-xs="6"/>
        <date-box caption="Date" data-context="$m_Dummy2" bind-to="ModifiedDate" c-xs="6"/>
        <number-box caption="Number" data-context="$m_Dummy2" bind-to="IdMandator" c-xs="6"/>
        <row>
            <text-area caption="Name" data-context="$m_Dummy2" bind-to="Name" height="200px" c-xs="6"/>
            <calendar caption="Name" data-context="$m_Dummy2" bind-to="ModifiedDate" c-xs="6"/>
        </row>
        <div>
            <text-area caption="Name" data-context="$m_Dummy2" bind-to="Name" height="200px" c-xs="6"/>
            <calendar caption="Name" data-context="$m_Dummy2" bind-to="ModifiedDate" c-xs="6"/>
        </div>
        <h1>Dummy 3</h1>
        <div>
            <text-area caption="Name" data-context="$m_Dummy3" bind-to="Name" height="200px" c-xs="6"/>
            <calendar caption="Name" data-context="$m_Dummy3" bind-to="ModifiedDate" c-xs="6"/>
        </div>

        <editor data-context="$m_Dummy3" bind-to="Name" />

        <text>
            **${$m_Dummy.Test}** ist am ${$m_Dummy.Date} ${$m_Dummy.Number}x hier gewesen!
        </text>

        <dx caption="Dummy" widget="dxTextBox" options-name="$f_Test.dummyText" />

        <repeat bind-to="$f_Test.dataList">
            <text>${item.a} ${item.b}</text>
        </repeat>
        <repeat bind-to="$f_Test.dataList" side-by-side="true">
            <text>${item.a} ${item.b}</text>
        </repeat>

        <tab>
            <tab-pages>
                <tab-page caption="Tab 1">
                    <text>Ich bin ein Text 1</text>

                    <data-grid data-context="$m_Dummy" show-filter-row="true" on-row-click="$f_Test.dummyRowClickFunc(e)" selection-mode="single" edit-data-context="$m_Dummy2">
                        <data-grid-columns>
                            <data-grid-column caption="Name" bind-to="Name" />
                            <data-grid-column caption="ModifiedDate" bind-to="ModifiedDate" />
                        </data-grid-columns>
                    </data-grid>
                </tab-page>
                <tab-page caption="Tab 2" on-activated="dummyx = 1">
                    <text>Ich bin ein Text 2</text>
                </tab-page>
                <tab-page caption="Tab 3">
                    <text>Ich bin ein Text 3</text>
                </tab-page>
            </tab-pages>
        </tab>
    </content>
</form>